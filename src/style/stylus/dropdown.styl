.dd-wrapper
  font-size: 1.6rem
  user-select: none
  position: relative
  width: 250px

  .dd-header
    display: flex
    align-items: center
    justify-content: space-between
    line-height: 38px
    border: 1px solid #2AAF9F
    border-radius: 10px 0 0 10px
    position: relative
    background-color: white
    outline: none
    color: #6A678B
    cursor: pointer

    &:focus
      outline: none
    &:hover
      background-color: #2AAF9F
      color: #ffffff
    &.open
      border-bottom: 0
      border-radius: 10px 0 0 0
    span
      margin-right: 20px

  .dd-header-title
    font-weight: 300
    margin: 2px 20px
    margin-right: 30px

  .angle-down
    color: black
    margin-right: 20px

  .dd-list
    text-align: left
    z-index: 10
    position: absolute
    width: 100%
    border: 1px solid #2AAF9F
    border-top: none
    border-bottom-right-radius: 3px
    border-bottom-left-radius: 3px
    background-color: white
    box-shadow: 0 5px 5px -1px #e8e8e8
    font-weight: 700
    padding: 15px 0
    max-height: 215px
    overflow-y: auto

  .dd-list-item
    width: 100%
    font-size: 1.35rem
    padding: 8px 10px
    line-height: 1.6rem
    display: inline-block
    white-space: nowrap
    text-overflow: ellipsis
    color: #6A678B
    outline: none
    cursor pointer

    &.selected
      color: white
      background-color: #2AAF9F

    &:hover
      color: white
      background-color: #2AAF9F

    &:focus
      outline: none